<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andreamarseglia.app.frisbeeGolfApp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/jebu"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.andreamarseglia.app.frisbeeGolfApp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.andreamarseglia.app.frisbeeGolfApp.NewCourseActivity"
            android:label="@string/title_activity_new_course"
            android:parentActivityName="com.andreamarseglia.app.frisbeeGolfApp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.andreamarseglia.app.frisbeeGolfApp.MainActivity" />
        </activity>
        <activity
            android:name="com.andreamarseglia.app.frisbeeGolfApp.AddPlayersActivity"
            android:label="@string/title_activity_add_players"
            android:parentActivityName="com.andreamarseglia.app.frisbeeGolfApp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.andreamarseglia.app.frisbeeGolfApp.MainActivity" />
        </activity>
        <activity
            android:name="com.andreamarseglia.app.frisbeeGolfApp.PlayCourseActivity"
            android:label="@string/title_activity_play_course"
            android:parentActivityName="com.andreamarseglia.app.frisbeeGolfApp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.andreamarseglia.app.frisbeeGolfApp.MainActivity" />
        </activity>
        <activity
            android:name="com.andreamarseglia.app.frisbeeGolfApp.ResultActivity"
            android:label="@string/title_activity_result"
            android:parentActivityName="com.andreamarseglia.app.frisbeeGolfApp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.andreamarseglia.app.frisbeeGolfApp.MainActivity" />
        </activity>
    </application>

</manifest>
